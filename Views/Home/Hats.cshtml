@model Truckette.Models.ProductPages
@{
    ViewData["Title"] = "Hats";
}
@* Truckette NavBar *@
<div id="page-top">
           <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
                <div class="container">
                    <img class="navbar-logo mr-2" src="~/assets/img/portfolio/thumbnails/Logo.jpg">
                    <a class="navbar-brand js-scroll-trigger" asp-action="Index">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ol class="navbar-nav ml-auto my-2 my-lg-0">
                            @if (@Model.User == null)
                            {
                                <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-action="SetSession" asp-controller="Login" asp-route-pagefrom="Hats">Login</a></li>
                                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, Guest</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, @Model.User.FirstName</a></li>
                                <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-action="Logoff" asp-controller="Login" asp-route-page="Hats">Logoff</a></li>
                            }
                            <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a></li>
                            <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#contact">Contact<a></li>
                        </ol>
                    </div>
                </div>
            </nav>
        @* banner head *@
        <header class="AllBanner HatBanner">
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-10 align-center">
                        <h1 class="text-uppercase text-white font-weight-bold">Hats</h1>

                        <hr class="divider my-4" />
                    </div>
                    <div class="col-lg-8 align-self-baseline">
                        <p class="text-white-75 font-weight-light mb-5">We gots what you need!</p> 
                    </div>
                </div>
            </div>
        </header>
        @* body of the sales thumbnails *@
        <div class="container apparelContainer">
            <div class="row">
                @foreach (Product product in Model.ListOfProducts)
                {
                <div class="col-lg-4 col-md-4 col-sm-3">
                    <ul class="list-unstyled text-center">
                        <a class="portfolio-box" href="Product/{@product.ProductId}">
                            <li>
                                <img class="img-thumbnail img-fluid" src="~/@product.ImageUrl" alt="projuct img">
                            </li>
                        </a>
                        <li>@product.ProductName</li>
                        <li>@product.Description</li>
                        @* <li>$@product.Price</li> *@
                    </ul>
                </div>
                }   
            </div>
        </div>