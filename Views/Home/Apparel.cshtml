@model Truckette.Models.ProductsPageW
@* Truckette NavBar *@
<div id="page-top">
           <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
                <div class="container">
                    <img src="wwwroot/assets/img/portfolio/thumbnails/1.jpg">
                    <a class="navbar-brand js-scroll-trigger" href="#page-top">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ol class="navbar-nav ml-auto my-2 my-lg-0">
                            @if (@Model.User == null)
                            {
                                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="login">Login</a></li>
                                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, Guest</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, @Model.User.FirstName</a></li>
                                <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-action="Logoff" asp-controller="Login" asp-route-page="Apparel">Logoff</a></li>
                            }
                            <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a></li>
                            <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#contact">Contact<a></li>
                        </ol>
                    </div>
                </div>
            </nav>
        @* banner head *@
        <header class="ApparelBanner">
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-10 align-center">
                        <h1 class="text-uppercase text-white font-weight-bold">Apparel</h1>

                        <hr class="divider my-4" />
                    </div>
                    <div class="col-lg-8 align-self-baseline">
                        <p class="text-white-75 font-weight-light mb-5">More than just hats! Looking for cute tanks that represent what you're all about? Look no further!</p> 
                    </div>
                </div>
            </div>
        </header>
        @* body of the sales thumbnails *@
        <div class="apparelContainer">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="apparel">
                        @foreach (Product product in Model.ListOfProducts)
                        {
                            <ul class="list-unstyled text-center">
                                <li><img class="img-thumbnail" src="~/@product.ImageUrl" alt="projuct img"></li>
                                <li>@product.ProductName</li>
                                @* <li>$@product.Price</li> *@
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
        