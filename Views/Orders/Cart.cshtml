@model CartW
@{
    ViewData["Title"] = "Cart";
}

<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container">
        <img src="wwwroot/assets/img/portfolio/thumbnails/1.jpg">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ol class="navbar-nav ml-auto my-2 my-lg-0">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">About</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#services">Service</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#portfolio">Products</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">Contact<a></li>
            </ol>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
          <h1>Shopping Cart</h1>
    </div>
    <div class="row">
                
                    @foreach (Order p in Model.ItemsInCart)
                    {
                    <div class="col-sm-3">
                        <ul class="list-unstyled text-center">
                            <li><img class="img-thumbnail" src="~/Images/@p.Product.ImageUrl" alt=""></li>
                            <li>@p.Product.ProductName</li>
                            <li>(@p.Product.Quantity left)</li>
                            <li><a asp-action="ProductDetailsPage" asp-route-id="@p.ProductId">Detail/Edit Page</a></li>
                        </ul>
                    </div>
                    }
                
            </div>

    </div> 
</div>
