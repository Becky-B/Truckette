@model LoginUser
@{
    ViewData["Title"] = "Login Page";
}
<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container">
        <img class="navbar-logo mr-2" src="~/assets/img/portfolio/thumbnails/Logo.jpg">
        <a class="navbar-brand js-scroll-trigger" asp-action="Index" asp-controller="Home">Truckette Hat CO.</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ol class="navbar-nav ml-auto my-2 my-lg-0">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger">Welcome back!</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/#contact">Contact<a>
                </li>
            </ol>
        </div>
    </div>
</nav>
    @* banner head *@
<header class="AllBanner LoginBanner">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center mt-5">
            <div class="col-lg-6 mt-5 align-center">
                <h1 class="text-uppercase text-white font-weight-bold mb-5">Please Sign in</h1>
                <form asp-action="LoginUser" asp-controller="Login" method="post" class="form-signin">
                    <div class="form-group">
                        <label asp-for="LoginEmail" class="sr-only">Email Address</label> 
                        <input type="email" asp-for="LoginEmail" class="form-control transparent-input" placeholder="Email Address" required autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginPassword" class="sr-only">Password</label>
                        <input type="password" asp-for="LoginPassword" class="form-control transparent-input" placeholder="Password" required autofocus>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block login-button" type="submit">Sign In</button>
                </form>                   
                <div class="register text-center mt-4">
                    <a class="login-link" asp-action="Registration">Register New User</a>
                </div>
            </div>
        </div>
    </div>
</header>