@model LoginUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>
    <div class="row d-flex justify-content-center text-center">
        <div class="col-sm-4">
            <form asp-action="LoginUser" asp-controller="Login" method="post" class="form-signin">
                <h1 class="h3 mb-3 font-weight-normal">Please Sign in</h1>
                <label asp-for="LoginEmail" class="sr-only">Email Address</label>
                <input type="email" asp-for="LoginEmail" class="form-control" placeholder="Email Address" required autofocus>
                <label asp-for="LoginPassword" class="sr-only">Password</label>
                <input type="password" asp-for="LoginPassword" class="form-control" placeholder="Password" required autofocus>
                <div class="checkbox mb-3"></div>
                    <label>
                        <input type="checkbox" value="remember-me">
                        Remember Me
                    </label>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
            </form>
        </div>
    </div>
</body>
</html>