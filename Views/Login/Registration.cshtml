@model User

<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container">
            <img class="navbar-logo mr-2" src="~/assets/img/portfolio/thumbnails/Logo.jpg">
            <a class="navbar-brand js-scroll-trigger" asp-action="Index" asp-controller="Home">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ol class="navbar-nav ml-auto my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome back!</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#contact">Contact<a></li>
                </ol>
            </div>
        </div>
    </nav>
        @* banner head *@
    <header class="ApparelBanner">
    <div class="container">
        <div class="col-lg-6 mt-5 align-center mt-5">
        </div>
        <form asp-action="RegisterUser" asp-controller="Login" method="post">
            <div class="form-row mt-6">
                <div class="col-lg-4 form-group mt-5">
                    <span asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName">First Name </label>
                    <input class="form-control" type="text" asp-for="FirstName">
                    <span asp-validation-for="LastName"></span>
                    <label asp-for="LastName">Last Name </label>
                    <input class="form-control" type="text" asp-for="LastName">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email">Email </label>
                    <input class="form-control" type="email" asp-for="Email">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password">Password </label>
                    <input class="form-control" type="password" asp-for="Password">
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm">Confirm Password </label>
                    <input class="form-control" type="password" asp-for="Confirm">
                    <button type="submit" class="btn btn-primary form-control">Sign Up Now</button>
                </div>
            </div>
        </form>
    </div>
</body>