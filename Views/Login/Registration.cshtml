@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Registration</title>
</head>
<body>
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-6 text-center">
                <h1>Register here</h1>
            </div>
            <div class="col-sm-6 text-center">
                <h3><a asp-action="Login">Login</a></h3>
            </div>
        </div>
    </div>
    <div class="container">
    <form asp-action="RegisterUser" asp-controller="Login" method="post">
        <div class="form-row">
            <div class="col-md-6 form-group">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName">First Name </label>
                <input class="form-control" type="text" asp-for="FirstName">
            </div>
            <div class="col-md-6 form-group">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName">Last Name </label>
                <input class="form-control" type="text" asp-for="LastName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email">Email </label>
                <input class="form-control" type="email" asp-for="Email">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password">Password </label>
                <input class="form-control" type="password" asp-for="Password">
            </div>
            <div class="form-group col-md-6">
                <span asp-validation-for="Confirm"></span>
                <label asp-for="Confirm">Confirm Password </label>
                <input class="form-control" type="password" asp-for="Confirm">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign Up Now</button>
            </div>
        </div>
    </form>
    </div>
</body>
</html>