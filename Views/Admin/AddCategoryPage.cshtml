@model AddCategoryPageW
<div class="container">
    <div class="row">
        <div class="col-sm">
            <a asp-action="AdminDash" asp-controller="Admin">Back</a>
        </div>
        <div class="col-sm">
            <a asp-action="AddProductPage" asp-controller="Admin">Add Product</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-sm-4">
            <div class="row">
                <h2>Add a new Product</h2>
                <form asp-action="AddCategoryUrl" id="addCategory" method="post">
                    <div class="form-group">
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                        <label asp-for="Category.Name"></label>
                        <input class="form-control" asp-for="Category.Name">
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Add Category</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <ul>

            @foreach (var item in Model.ListOfCategories)
            {
                <li>@item.Name</li>
            }
            </ul>
        </div>
    </div>
</div>