@{
    ViewData["Title"] = "All products Page";
}
@model ProductsPageW
<div class="container mt-5">

    <div class="row mt-5">

        <div class="col-sm-4">
            <div class="row mb-5">
                <form action="AdminDash"  method="get" class="form-inline">
                    <div class="form-group">
                        @* <div class="col"> *@
                            <span asp-validation-for="FilterForm.ToLookFor"></span>
                            <input class="form-control" 
                                    asp-for="FilterForm.ToLookFor" 
                                    type="text" 
                                    placeholder="search...">
                            <button class="btn btn-primary ml-2" type="submit">Filter</button>
                        @* </div> *@
                    </div>
                </form>
                <a class="btn btn-primary ml-2" asp-action="AdminDash">Reset</a>
            </div>
            <div class="row">
                <h2>Add a new Product</h2>
                <form action="addProduct" method="post">

                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.ProductName"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.ProductName">
                        </div>
                    </div>

                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Product.Category"></label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="Product.Category">
                                <option value="Hats">Hats</option>
                                <option value="Tank Top">Tank Top</option>
                                <option value="Tanks">Tanks</option>
                            </select>
                        </div>
                    </div>

                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Product.ImageUrl"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.ImageUrl">
                        </div>
                    </div>

                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                        </div>
                    </div>

                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.Quantity">
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Add Product</button>
                </form>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="row">
                @if (Model != null && Model.ListOfProducts != null)
                {
                    @foreach (Product p in Model.ListOfProducts)
                    {
                    <div class="col-sm-3">
                        <ul class="list-unstyled text-center">
                            <li><img class="img-thumbnail" src="~/Images/@p.ImageUrl" alt=""></li>
                            <li>@p.ProductName</li>
                            <li>(@p.Quantity left)</li>
                            <li><a asp-action="ProductDetailsPage" asp-route-id="@p.ProductId">Detail/Edit Page</a></li>
                        </ul>
                    </div>
                    }
                }
            </div>
        </div>
</div>