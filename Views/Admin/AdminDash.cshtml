@{
    ViewData["Title"] = "Admin Dashboard";
}
@model ProductsPageW
 <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container">
        <img class="navbar-logo mr-2" src="~/assets/img/portfolio/thumbnails/Logo.jpg">
        <a class="navbar-brand js-scroll-trigger" asp-action="Index">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ol class="navbar-nav ml-auto my-2 my-lg-0">
                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, Stacie!</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-action="Logoff" asp-controller="Login" asp-route-page="Apparel">Logoff</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a></li>

            </ol>
        </div>
    </div>
</nav>
<header class="AllBanner ApparelBanner">
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-10 align-center">
                        <h1 class="text-uppercase text-white font-weight-bold">Admin Tools</h1>
                        <div id="adminMain" class="container mt-5">
    <div class="row mb-5">
        <div class="col-sm-4">
            <form action="FilterProducts" method="post" class="form-inline">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="FilterForm.ToLookFor"></span>
                    <input class="form-control" 
                            asp-for="FilterForm.ToLookFor" 
                            type="text" 
                            placeholder="search...">
                    <button class="btn btn-primary ml-2" type="submit">Filter</button>
                </div>
            </form>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-primary" asp-action="AdminDash">Reset</a>
        </div>
        <div class="col-sm-3">
            <a asp-action="AddProductPage">Add Product</a>
        </div>
        <div class="col-sm-3">
            <a asp-action="AddCategoryPage">Add Category</a>
        </div>
        @* <div class="col-sm-3 text-right">
            <a class="btn btn-primary" data-toggle="modal" data-target="#addCategoryModal">Adde New Category</a>
        </div> *@
    </div>
    
        <div class="col-sm-8">
            <div class="row">
                @if (Model != null && Model.ListOfProducts != null)
                {
                    @foreach (Product p in Model.ListOfProducts)
                    {
                    <div class="col-sm-3">
                        <ul class="list-unstyled text-center">
                            <li><img class="img-thumbnail" src="~/@p.ImageUrl" alt=""></li>
                            <li>@p.ProductName</li>
                            <li>(@p.Quantity left)</li>
                            <li><a asp-action="ProductDetailsPage" asp-route-id="@p.ProductId">Detail/Edit Page</a></li>
                        </ul>
                    </div>
                    }
                }
            </div>
        </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
            <div class="row d-flex justify-content-around">
                <div class="col-sm-6">
                    <form asp-action="AddCategoryUrl" id="addCategory" method="post">
                        <div class="form-group">
                            <span id="errorMessage" class="text-danger"></span>
                            <label asp-for="Category.Name"></label>
                            <input class="form-control" asp-for="Category.Name">
                        </div>
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Add Category</button>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
                </div>
            </div>
        </header>
