@{
    ViewData["Title"] = "Admin Dashboard";
}
@model ProductsPageW
<div id="adminMain" class="container mt-5">
    <div class="row mb-5">
        <div class="col-sm-4">
            <form action="AdminDash"  method="get" class="form-inline">
                <div class="form-group">
                    @* <div class="col"> *@
                        <span asp-validation-for="FilterForm.ToLookFor"></span>
                        <input class="form-control" 
                                asp-for="FilterForm.ToLookFor" 
                                type="text" 
                                placeholder="search...">
                        <button class="btn btn-primary ml-2" type="submit">Filter</button>
                    @* </div> *@
                </div>
            </form>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-primary" asp-action="AdminDash">Reset</a>
        </div>
        <div class="col-sm-6 text-right">
            <a class="btn btn-primary" data-toggle="modal" data-target="#addCategoryModal">Adde New Category</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-sm-4">
            <div class="row">
                <h2>Add a new Product</h2>
                <form action="addProduct" method="post" enctype="multipart/form-data">

                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.ProductName"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.ProductName">
                        </div>
                    </div>

                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="CategoryName">
                                @foreach (Category c in Model.ListOfCategories)
                                {
                                    <option value="@c.CategoryId">@c.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Image"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" asp-for="Product.Image">
                        </div>
                    </div>

                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                        </div>
                    </div>

                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.Quantity">
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Add Product</button>
                </form>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="row">
                @if (Model != null && Model.ListOfProducts != null)
                {
                    @foreach (Product p in Model.ListOfProducts)
                    {
                    <div class="col-sm-3">
                        <ul class="list-unstyled text-center">
                            <li><img class="img-thumbnail" src="~/@p.ImageUrl" alt=""></li>
                            <li>@p.ProductName</li>
                            <li>(@p.Quantity left)</li>
                            <li><a asp-action="ProductDetailsPage" asp-route-id="@p.ProductId">Detail/Edit Page</a></li>
                        </ul>
                    </div>
                    }
                }
            </div>
        </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
            <div class="row d-flex justify-content-around">
                <div class="col-sm-6">
                    <form action="AddCategoryUrl" id="addCategory" method="post">
                        <div class="form-group">
                            <span id="errorMessage" class="text-danger"></span>
                            <label asp-for="Category.Name"></label>
                            <input class="form-control" asp-for="Category.Name">
                        </div>
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Add Category</button>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>