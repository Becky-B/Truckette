@{
    ViewData["Title"] = "All products Page";
}
@model Product
<div class="container mt-5">
    <div class="row">
        <div class="col-sm">
            <a asp-action="AdminDash" asp-controller="Admin">Back</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h2>Detail/Edit page</h2>
            <form asp-action="EditProduct" asp-route-id="@Model.ProductId" method="post">

                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="ProductName"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductName">
                        </div>
                    </div>

                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Category"></label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="Category">
                                <option value="Hats">Hats</option>
                                <option value="Tank Top">Tank Top</option>
                                <option value="Tanks">Tanks</option>
                            </select>
                        </div>
                    </div>

                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="ImageUrl"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ImageUrl">
                        </div>
                    </div>

                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                    </div>

                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Quantity"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Quantity">
                        </div>
                    </div>

                    <button class="btn btn-primary" type="submit">Edit Product</button>
                </form>
        </div>
    </div>
</div>