@model AddProductPageW
@{
    ViewData["Title"] = "Edit Product Page";
}
<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container">
        <img class="navbar-logo mr-2" src="~/assets/img/portfolio/thumbnails/Logo.jpg">
        <a class="navbar-brand js-scroll-trigger" asp-action="Index">Truckette Hat CO.</a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ol class="navbar-nav ml-auto my-2 my-lg-0">
                <li class="nav-item"><a class="nav-link js-scroll-trigger">Welcome, Stacie!</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-action="Logoff" asp-controller="Login" asp-route-page="Apparel">Logoff</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/#portfolio">Products</a></li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="AdminDash" asp-controller="Admin">Admin Dasboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="AddProductPage" asp-controller="Admin">Add Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="AddCategoryPage" asp-controller="Admin">Add Category</a>
                </li>
            </ol>
        </div>
    </div>
</nav>

<header class="AllBanner ApparelBanner">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-center">
                <h1 class="text-uppercase text-white font-weight-bold">Admin Tools</h1>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row mt-5 mb-5">
        <div class="col-sm">
            <h2 class="mb-4">Detail/Edit page</h2>
            <form asp-action="EditProduct" asp-route-id="@Model.Product.ProductId" method="post" enctype="multipart/form-data">
                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.ProductName"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.ProductName">
                        </div>
                    </div>
<hr>
                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="Product.CategoryId">
                                @foreach (Category c in Model.ListOfCategories)
                                {
                                    <option value="@c.CategoryId">@c.Name</option>
                                }
                            </select>
                        </div>
                    </div>
<hr>
                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label asp-for="Product.Image"></label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <span>Current file name: <em>@Model.Product.ImageUrl.Substring(6)</em></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" class="form-control-file" asp-for="Product.Image" value="@Model.Product.ImageUrl">
                        </div>
                    </div>
<hr>
                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                        </div>
                    </div>
<hr>
                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.Quantity">
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary" type="submit">Edit Product</button>
                    </div>
                </form>
        </div>
    </div>
</div>