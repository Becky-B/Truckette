@model AddProductPageW
<div class="container">
    <div class="row">
        <div class="col-sm">
            <a asp-action="AdminDash" asp-controller="Admin">Back</a>
        </div>
        <div class="col-sm">
            <a asp-action="AddCategoryPage" asp-controller="Admin">Add Category</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-sm-4">
            <div class="row">
                <h2>Add a new Product</h2>
                <form action="addProduct" method="post" enctype="multipart/form-data">

                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.ProductName"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.ProductName">
                        </div>
                    </div>

                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="CategoryName">
                                @foreach (Category c in Model.ListOfCategories)
                                {
                                    <option value="@c.CategoryId">@c.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Image"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" asp-for="Product.Image">
                        </div>
                    </div>

                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                        </div>
                    </div>

                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Product.Quantity">
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Add Product</button>
                </form>
            </div>
        </div>
    </div>
</div>