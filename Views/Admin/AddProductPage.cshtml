@model AddProductPageW
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Truckette</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="AdminDash" asp-controller="Admin">Admin Dasboard</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link">Add Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="AddCategoryPage" asp-controller="Admin">Add Category</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row mt-5 mb-5">
        <div class="col-sm">
                <h2>Add a new Product</h2>
                <form action="addProduct" method="post" enctype="multipart/form-data">

                    @* Product *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Product.ProductName"></label>
                        </div>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Product.ProductName">
                        </div>
                    </div>

                    @* Category *@
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="CategoryName">
                                @foreach (Category c in Model.ListOfCategories)
                                {
                                    <option value="@c.CategoryId">@c.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    @* ImageUrl *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Product.Image"></label>
                        </div>
                        <div class="col-sm-10">
                            <input type="file" class="form-control-file" asp-for="Product.Image">
                        </div>
                    </div>

                    @* Description *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                        </div>
                    </div>

                    @* Quantity *@
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Product.Quantity">
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary" type="submit">Add Product</button>

                    </div>
                </form>
        </div>
    </div>
</div>